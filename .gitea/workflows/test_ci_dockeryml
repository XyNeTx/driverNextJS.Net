name: Local Gitea CI

on:
  push:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Build Docker image
        run: docker build -t driver_api .

      - name: Run Docker container
        run: docker run -d -p 5272:5272 driver_api
