    "version": "0.2.0",
    "configurations": [
        {
            "name": "NextJS: npm run dev",
            "command": "npm run dev",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "type": "node-terminal",
        },
        {
            "name": "C#: DriverNextJS Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "npm: dotnet - prepublishOnly", // Optional: Build before launching
            "program": "${workspaceFolder}/backend/bin/Debug/net7.0/driver_api.dll", // Adjust path and framework
            "args": [
            ],
            "launchSettingsProfile": "https",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "postDebugTask": "dotnet: clean"
        },
    ],
    "compounds": [
        {
        "name": "Start API + Next.js",
        "configurations": [
            "C#: DriverNextJS Debug",
            "NextJS: npm run dev"
        ],
        "stopAll": true
        }
    ]
}