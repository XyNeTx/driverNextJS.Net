    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: DriverNextJS Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/server/driver_api.csproj",
        },
        {
            "name": "C#: DriverNextJS Watch",
            "type": "node-terminal",
            "request": "launch",
            "command": "dotnet watch run",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "name": "NextJS: npm run dev",
            "command": "npm run dev",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "type": "node-terminal",
        },
        {
            "name": "NextJS: npm run build",
            "command": "npm run build",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "type": "node-terminal",
        },
    ],
    "compounds": [
        {
        "name": "Start API + Next.js",
        "configurations": [
            "C#: DriverNextJS Debug",
            "NextJS: npm run dev"
        ],
        "stopAll": true
        }
    ]
}